@page
@model CreateInvoiceModel
@{
    ViewData["Title"] = "Create Invoice";
}

<form asp-page="CreateInvoice" method="post" id="invoiceForm">
    <div class="control-group form-group">
        <div class="controls">
            <label asp-for="Invoice.Description">Description:</label>
            <input asp-for="Invoice.Description" class="form-control">
            @if (Model.ModelState.GetFieldValidationState("Invoice.Description") == Microsoft.AspNetCore.Mvc.ModelBinding.ModelValidationState.Invalid)
            {
                <div class="alert alert-warning" role="alert">
                    <span asp-validation-for="Invoice.Description">The Description field is required.</span>
                </div>
            }
        </div>
    </div>
    <div class="control-group form-group">
        <div class="controls">
            <label asp-for="Invoice.Quantity">Quantity:</label>
            <input asp-for="Invoice.Quantity" class="form-control">
            @if (Model.ModelState.GetFieldValidationState("Invoice.Quantity") == Microsoft.AspNetCore.Mvc.ModelBinding.ModelValidationState.Invalid)
            {
                <div class="alert alert-warning" role="alert">
                    <span asp-validation-for="Invoice.Quantity">The Quantity field is required.</span>
                </div>
            }
        </div>
    </div>
    <div class="control-group form-group">
        <div class="controls">
            <label asp-for="Invoice.Price">Price:</label>
            <input asp-for="Invoice.Price" class="form-control">
            @if (Model.ModelState.GetFieldValidationState("Invoice.Price") == Microsoft.AspNetCore.Mvc.ModelBinding.ModelValidationState.Invalid)
            {
                <div class="alert alert-warning" role="alert">
                    <span asp-validation-for="Invoice.Price">The Price field is required.</span>
                </div>
            }
        </div>
    </div>
    <div class="control-group form-group">
        <div class="controls">
            <label asp-for="Invoice.DiscountPercentage">Discount Percentage:</label>
            <input asp-for="Invoice.DiscountPercentage" class="form-control">
            @if (Model.ModelState.GetFieldValidationState("Invoice.DiscountPercentage") == Microsoft.AspNetCore.Mvc.ModelBinding.ModelValidationState.Invalid)
            {
                <div class="alert alert-warning" role="alert">
                    <span asp-validation-for="Invoice.DiscountPercentage">The Discount Percentage field is required.</span>
                </div>
            }
        </div>
    </div>
    <div class="control-group form-group">
        <div class="controls">
            <label asp-for="Invoice.TaxPercentage">Tax Percentage:</label>
            <input asp-for="Invoice.TaxPercentage" class="form-control">
            @if (Model.ModelState.GetFieldValidationState("Invoice.TaxPercentage") == Microsoft.AspNetCore.Mvc.ModelBinding.ModelValidationState.Invalid)
            {
                <div class="alert alert-warning" role="alert">
                    <span asp-validation-for="Invoice.TaxPercentage">The Tax Percentage field is required.</span>
                </div>
            }
        </div>
    </div>
    <button type="submit" class="btn btn-primary" id="createButton">Create</button>
</form>
